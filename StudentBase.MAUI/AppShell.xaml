<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StudentBase.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StudentBase.MAUI"
    Title="СУБД личных данных студентов"
    FlyoutBackgroundColor="LightGrey" 
    FlyoutBehavior="Locked" 
    FlyoutWidth="250">
    
    <FlyoutItem Title="Главная">
        <ShellContent
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Студенты">
        <ShellContent
            ContentTemplate="{DataTemplate local:StudentPage}"
            Route="StudentPage"/>
    </FlyoutItem>

    <FlyoutItem Title="Группы">
        <ShellContent 
            ContentTemplate="{DataTemplate local:GroupPage}"
            Route="GroupPage" />
    </FlyoutItem>

    <FlyoutItem Title="Программы обучения">
        <ShellContent 
            ContentTemplate="{DataTemplate local:ProgramPage}"
            Route="ProgramPage" />
    </FlyoutItem>

    <FlyoutItem Title="Переводы студентов">
        <ShellContent 
            ContentTemplate="{DataTemplate local:StudentTransfersPage}"
            Route="StudentTransfersPage" />
    </FlyoutItem>

    <FlyoutItem Title="Оплата">
        <ShellContent 
            ContentTemplate="{DataTemplate local:TuitionFeesPage}"
            Route="TuitionFeesPage" />
    </FlyoutItem>

</Shell>
